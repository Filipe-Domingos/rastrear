<%= form_for(@marca) do |f| %>
  <% if @marca.errors.any? %>
	  <div class="alert alert-danger alert-dismissable">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	    <ul>
	    <% @marca.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
  <% else %>
    <p id="notice"></p>
  <% end %>

  <div class="row">
    <div class="form-group">
      <div class="col-md-1"><%= f.label :descricao, 'DescriÃ§Ã£o' %></div>
      <div class="col-md-2"><%= f.text_field :descricao ,:class => 'form-control', :size => 20 %></div>
    </div>
  </div>

  <br/>

  <% index = 1 %>
  <% @tipo_veiculos.each do |tipo_veiculo| %>
    
    <%= check_box_tag("tipo_veiculos_ids[]", tipo_veiculo.id, false, { class: 'check-box' } ) %>
    <%= tipo_veiculo.descricao %>
    <%= hidden_field_tag tipo_veiculo.id, tipo_veiculo.id %>
    
    <% if index != 0 && index % 3 == 0 %>
      <br>
    <%end%> 
    <% index += 1%>
  <% end %>
    
  <br>
  <br>

  <div class="form-group">
    <div class="col-md-1">
      <%= link_to marcas_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-arrow-left"></span>
        Voltar
      <% end %>
    </div>

    <div class="col-md-1">
      <%= f.submit :class => "btn btn-primary", :value => "Enviar" %>
    </div>
  </div>
<% end %>

