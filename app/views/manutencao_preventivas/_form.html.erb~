<%= form_for(@manutencao_preventiva) do |f| %>
  <% if @manutencao_preventiva.errors.any? %>
	  <div class="alert alert-danger alert-dismissable">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	    <ul>
	    <% @manutencao_preventiva.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
  <% else %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div class="row">

    <div class="form-group">
      <div class="col-md-2"><%= label_tag :veiculo_id, 'Veiculo' %></div>
      <div class="col-md-2">
        <%= f.select(:veiculo_id,options_for_select( @veiculos.map { |v| [v[:descricao], v[:id]] } ),prompt: "Selecione um veiculo") %>
      </div>
    </div>

    <br/>

    <div class="form-group">
      <%if @manutencao_preventiva.data_manutencao.present?%>
        <div class="form-group">
          <div class="col-md-2"><%= f.label :data_manutencao,'Data da manutenção' %></div>
          <div class="col-md-2"><%= f.text_field :data_manutencao,:value =>l(@manutencao_preventiva.data_manutencao, :format => :default),:class => 'datepicker form-control',:size => 10,:onkeyup => 'mascaraData(this);',:id => "datepicker" %></div>
        </div>
      <%else%>
        <div class="form-group">
          <div class="col-md-2"><%= f.label :data_manutencao,'Data da manutenção' %></div>
          <div class="col-md-2"><%= f.text_field :data_manutencao,:class => 'datepicker',:size => 10,:onkeyup => 'mascaraData(this);',:id => "date" %></div>
        </div>
      <%end%>
    </div>

    <br/>
    <br/>

    <div class="form-group">
      <div class="col-md-2"><%= f.label :kilometragem_manutencao,'kilometragem da manutenção' %></div>
      <div class="col-md-10"><%= f.text_field :kilometragem_manutencao %></div>
    </div>

    <br/>
    <br/>

    <div class="form-group">
      <div class="col-md-2"><%= f.label :email %></div>
      <div class="col-md-10"><%= f.text_field :email %></div>
    </div>

    <div class="form-group">
      <div class="col-md-2"><%= f.label :descricao %></div>
      <div class="col-md-10"><%= f.text_field :descricao %></div>
    </div>

    <br/>
  </div>

  <br/>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary", :value => "Salvar" %>
    </div>
  </div>
<% end %>
