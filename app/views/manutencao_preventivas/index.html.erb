<div class="page-header">

    <%= link_to new_manutencao_preventiva_path, :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Cadastrar manutenção
    <% end %>

    <h1>Cadastro de manutenção preventiva</h1>
  </div>

  <%= smart_listing_controls_for(:manutencoes, {class: "form-inline text-left"}) do %>
<div class="busca">
    <fieldset> 
   <!-- <legend>Busca</legend>-->
      <%= label_tag :placa %>
    <div class="form-group filter input-append">
      <%= text_field_tag :filter, '', class: "search form-control", placeholder: "Digite aqui", autocomplete: "off" %>
    </div>
    <button class="btn btn-primary disabled" type="submit">
      <span class="glyphicon glyphicon-search"> </span>
    </button>
    </fieldset>
</div>
  <% end %>
  <br />
<%= smart_listing_render(:manutencoes) %>


