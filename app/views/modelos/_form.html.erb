<%= form_for(@modelo) do |f| %>
  <% if @modelo.errors.any? %>
	  <div class="alert alert-danger alert-dismissable">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	    <ul>
	    <% @modelo.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
  <% else %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div class="row">
    <div class="form-group">
      <div class="col-md-1"><%= f.label :descricao, 'DescriÃ§Ã£o' %></div>
      <div class="col-md-2"><%= f.text_field :descricao ,:class => 'form-control', :size => 15 %></div>
    </div>

    <br/>

    <div class="form-group">
      <div class="col-md-1"><%= f.label :marca_id, 'Marca' %></div>
      <div class="col-md-2">
        <%= f.collection_select(:marca_id, @marcas, :id, :descricao,prompt: "Selecione uma marca") %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-1">
        <%= link_to marcas_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-arrow-left"></span>
          Voltar
        <% end %>
      </div>

      <div class="col-md-1">
        <%= f.submit :class => "btn btn-primary", :value => "Enviar" %>
      </div>
    </div>
  </div>

  
<% end %>


