<%= form_for(@agendamento_viagem,:html => { :class => 'formulario_cadastro' }) do |f| %>
  <% if @agendamento_viagem.errors.any? %>
	  <div class="alert alert-danger alert-dismissable">
	    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	    <ul>
	    <% @agendamento_viagem.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
  <% else %>
    <p id="notice"></p>
  <% end %>

  <div class="row">
    <div class="form-group">
      <div class="col-md-2"><%= f.label :data_hora_saida,'SaÃ­da' %></div>
      <div class="agendamento"><%= f.datetime_select :data_hora_saida  %></div>
    </div>

    <div class="form-group">
      <div class="col-md-2"><%= f.label :veiculo_id, 'Veiculo' %></div>
      <div class="col-md-2">
        <%= f.select(:veiculo_id,options_for_select( @veiculos.map { |v| [v[:descricao], v[:id]] } ),prompt: "Selecione um veiculo") %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2"><%= f.label :condutor_id, 'Condutor' %></div>
      <div class="col-md-2">
        <%= f.collection_select(:condutor_id, @condutores,:id, :nome,prompt: "Selecione um condutor") %>
      </div>
    </div>

    
  </div>

  <div class="form-group">
    <div class="col-md-1">
      <%= link_to agendamento_viagens_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-arrow-left"></span>
        Voltar
      <% end %>
    </div>

    <div class="col-md-1">
      <%= f.submit :class => "btn btn-primary", :value => "Salvar" %>
    </div>

  </div>
<% end %>
