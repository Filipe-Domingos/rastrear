<% unless smart_listing.empty? %>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>
  <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Veiculo</th>
          <th>Motorista</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @agendamento_viagens.each do |agendamento| %>
          <tr>
            <td><%= agendamento.data_hora_saida.to_datetime.strftime('%d/%m/%Y - %H:%M') %></td>
            <td><%= agendamento.veiculo.descricao_veiculo %></td>
            <td><%= agendamento.condutor.nome %></td>
            <td>
              <%= link_to edit_agendamento_viagem_path(agendamento) do %>
                <span class="glyphicon glyphicon-search"></span> Editar
              <% end %>
            </td>
            <td>
              <%= link_to 'Excluir', agendamento, method: :delete, data: { confirm: 'Tem certeza que deseja remover este agendamento?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
        
<% else %>
  <p class="alert alert-info">
    NÃ£o encontrado.    
  </p>
<% end %>
