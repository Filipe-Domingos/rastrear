  <div class="page-header">

    <%= link_to new_veiculo_path, :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Cadastrar veículo
    <% end %>

    <h1>Cadastro de veículos</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Placa</th>
          <th>Tipo veiculo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @veiculos.each do |veiculo| %>
          <tr>
            <td><%= veiculo.modelo.marca.descricao %></td>
            <td><%= veiculo.modelo.descricao %></td>
            <td><%= veiculo.placa %></td>
            <td><%= veiculo.tipo_veiculo.descricao %></td>
            <td><%= link_to 'Detalhes', veiculo %>
                <%= link_to 'Editar', edit_veiculo_path(veiculo) %>
                <%= link_to 'Excluir', veiculo, method: :delete, data: { confirm: 'Tem certeza que deseja remover este veículo?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<br>


