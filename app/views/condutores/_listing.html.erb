<% unless smart_listing.empty? %>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>
  <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cnh</th>
          <th>Vencimento</th>
          <th>Categoria cnh</th>
          <th>telefone</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @condutores.each do |condutor| %>
          <tr>
            <td><%= condutor.nome %></td>
            <td><%= condutor.cnh %></td>
            <td><%=l (condutor.vencimento_cnh ? condutor.vencimento_cnh : Date.new) %></td>
            <td><%= condutor.categoria_cnh.descricao %></td>
            <td><%= condutor.telefone %></td>
            <td>
              <%= link_to edit_condutor_path(condutor) do %>
                <span class="glyphicon glyphicon-search"></span> Editar
              <% end %>
            </td>
            <td>
              <%= link_to 'Excluir', condutor, method: :delete, data: { confirm: 'Tem certeza que deseja remover este condutor?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
        
<% else %>
  <p class="alert alert-info">
    NÃ£o encontrado.    
  </p>
<% end %>
